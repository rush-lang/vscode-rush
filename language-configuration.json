{
    "comments": {
        "lineComment": "##",
        "blockComment": [ "###", "###" ],
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "`", "close": "`", "notIn": [ "string", "comment" ] },
        { "open": "'", "close": "'", "notIn": [ "string", "comment" ] },
        { "open": "\"", "close": "\"", "notIn": [ "string" ] }

    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<", ">"],
        ["`", "`"],
        ["'", "'"],
        ["\"", "\""]
    ],
    "autoCloseBefore": "\"'` \n\t",
    "folding": {
        "offSide": true
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*(?!##)\\s*(public|private|protected|internal)\\s*:?\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^[\\w\\s]*(?<!(?:abstract|extern)\\s*)(?<!\\w)(operator|func|construct|destruct|get|set)(?!\\w)(?!.*=>)",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^[\\w\\s]*\\s*(?<!\\w)(class|struct|record|interface|implements)(?!\\w).*:\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s*(?<!\\w)(if|else|while|for|try|finally)(?!\\w).*:\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "([_a-zA-Z\\)\\}\\]])(\\s*->.*)?\\s*=>\\s*$",
            "action": {
                "indent": "indent"
            }
        }
    ]
}