{
    "comments": {
        "lineComment": "##",
        "blockComment": [ "###", "###" ],
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "'", "close": "'", "notIn": [ "string", "comment" ] },
        { "open": "\"", "close": "\"", "notIn": [ "string" ] }

    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<", ">"],
        ["'", "'"],
        ["\"", "\""]
    ],
    "autoCloseBefore": "\"' \n\t",
    "folding": {
        "offSide": true
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*(public|private|protected|internal)\\s*:?\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "(?<![_[:alnum:]])(operator|func|get|set)(?![_[:alnum:]])(?!.*=>)",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "(?<![_[:alnum:]])(class|struct|record|interface|implements)(?![_[:alnum:]])",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s*(?<![_[:alnum:]])(if|else|while|for|try|finally)(?![_[:alnum:]]).*:\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "([_a-zA-Z\\)\\}\\]])\\s*=>\\s*$",
            "action": {
                "indent": "indent"
            }
        }
    ]
}