{
    "comments": {
        // symbol used for single line comment. Remove this entry if your language does not support line comments
        "lineComment": "##",
        // symbols used for start and end a block comment. Remove this entry if your language does not support block comments
        "blockComment": [ "###", "###" ],
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["'", "'"],
        ["\"", "\""]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<", ">"],
        ["'", "'"],
        ["\"", "\""]
    ],

    "autoCloseBefore": "\"' \n\t",
    "folding": {
        "offSide": true
    },

    "onEnterRules": [
        {
            "beforeText": "^\\s*(public|private|protected|internal)\\s*:?\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "(?<![_[:alnum:]])(operator|func|get|set)(?![_[:alnum:]])(?!.*=>)",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "(?<![_[:alnum:]])(class|struct|record|interface|implements)(?![_[:alnum:]])",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s*(?<![_[:alnum:]])(if|else|while|for|try|finally)(?![_[:alnum:]]).*:\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "([_a-zA-Z\\)\\}\\]])\\s*=>\\s*$",
            "action": {
                "indent": "indent"
            }
        }
    ]
}