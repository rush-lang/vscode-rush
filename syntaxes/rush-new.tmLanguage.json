{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Rush",
	"scopeName": "source.rush",
	"fileTypes": ["rush", "rs"],
	"patterns": [
		{ "include": "#global" },
		{ "include": "#function-declaration" }
	],
	"repository": {
		"statement-block": {
			"name": "meta.statement.block.rush",
			"begin": "^(\\s+)",
			"end": "^(?!\\1)",
			"patterns": [ { "match": "\\w+", "name": "variable.name.rush" } ]
		},
		"function-declaration": {
			"name": "meta.function.declaration.rush",
			"begin": "(func)",
			"end": "(?=.|$)",
			"applyEndPatternLast": 1,
			"beginCaptures": { "1": { "name": "storage.type.function.rush" } },
			"patterns": [
				{
					"begin": "(:)$",
					"end": "(?=[^\\s])",
					"applyEndPatternLast": 1,
					"beginCaptures": { "1": { "name": "punctuation.separator.colon.rush" } },
					"patterns": [ { "include": "#statement-block" } ]
				}
			]
		}
	}
}